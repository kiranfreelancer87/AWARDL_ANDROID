<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Change the color as per your preference -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as per your preference -->
        </shape>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F06292" /> <!-- Change the color as per your preference -->
            <corners android:radius="8dp" /> <!-- Adjust the corner radius as per your preference -->
        </shape>
    </item>

</selector>
