<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3sdp" />
            <solid android:color="@color/light_gray" /> <!-- Change to the desired pressed color -->
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_3sdp" />
            <solid android:color="@color/material_dynamic_neutral_variant40" /> <!-- Change to the desired default color -->
        </shape>
    </item>
</selector>
